<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBandeira"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/informacoes_do_pais"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="8dp"
            android:alpha="0.4"
            android:background="#969799" />


        <EditText
            android:id="@+id/edtShortName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:drawableLeft="@drawable/ic_public_black_18dp"
            android:drawablePadding="15dp"
            android:enabled="false"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/edtLongName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:drawableLeft="@drawable/ic_public_black_18dp"
            android:drawablePadding="15dp"
            android:enabled="false"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/edtCallingCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:drawableLeft="@drawable/ic_looks_4_black_18dp"
            android:drawablePadding="15dp"
            android:enabled="false"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/cbVisitouPais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chkVisitouPais" />

        <EditText
            android:id="@+id/edtDataVisited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:drawableLeft="@drawable/ic_access_time_black_18dp"
            android:drawablePadding="15dp"
            android:textColor="@android:color/black"
            android:focusable="false"
            android:hint="@string/data_visita_pais"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/txtErro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:lines="2"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/menu_done"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:textStyle="bold"
            />

    </LinearLayout>


</LinearLayout>
